@model DataTable;
@using System.Data;

<main id="main" class="main">

    <div class="pagetitle">
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-9">
                                <h5 class="card-title text-center">User Table</h5>
                            </div>
                            <div class="col text-end">
                                <a asp-controller="User" asp-action="AddUser" class="btn btn-primary mt-3">
                                    <i class="bi bi-plus-circle"></i> Add User
                                </a>
                            </div>
                        </div>
                        @if (@TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show " role="alert">
                                <h5 class="text-danger">@TempData["ErrorMessage"]</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" area-label="close"></button>

                            </div>

                        }

                        <!-- Default Table -->
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col" class="text-center">UserID</th>
                                    <th scope="col" class="text-center">UserName</th>
                                    <th scope="col" class="text-center">Email</th>
                                    <th scope="col" class="text-center">Password</th>
                                    <th scope="col" class="text-center">MobileNo</th>
                                    <th scope="col" class="text-center">Address</th>
                                    <th scope="col" class="text-center">IsActive</th>
                                    <th scope="col" class="text-center">Update</th>
                                    <th scope="col" class="text-center">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow dataRow in Model.Rows)
                                {
                                    <tr>
                                        <td class="border-2 text-center">
                                            @dataRow["UserID"]
                                        </td>
                                        <td class="border-2 text-center">
                                            @dataRow["UserName"]
                                        </td>
                                        <td class="border-2 text-center">
                                            @dataRow["Email"]
                                        </td>
                                        <td class="border-2 text-center">
                                            @dataRow["Password"]
                                        </td>
                                        <td class="border-2 text-center">
                                            @dataRow["MobileNo"]
                                        </td>
                                        <td class="border-2 text-center">
                                            @dataRow["Address"]
                                        </td>
                                        <td class="border-2 text-center">
                                            @dataRow["IsActive"]
                                        </td>
                                        <td class="border-2 text-center">
                                            <a asp-controller="User" asp-action="AddUser" asp-route-UserID="@dataRow["UserID"]" class="btn btn-warning">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                        </td>
                                        <td class="border-2 text-center">
                                            <form method="post" asp-controller="User" asp-action="UserDelete">
                                                <input type="hidden" name="UserID" value="@dataRow["UserID"]" />
                                                <button type="submit" class="btn btn-danger" onclick="return confirmDelete()">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Default Table Example -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->


<script type="text/javascript">
    function confirmDelete() {
        return confirm("Are you sure you want to delete this User?");
    }
</script>
